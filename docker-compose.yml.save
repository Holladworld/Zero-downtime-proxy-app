# On your VPS, edit docker-compose.yml:
cat > docker-compose.yml << 'EOF'
services:
  nginx:
    image: nginx:alpine
    ports:
      - "8080:8080"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - blue
      - green
    restart: unless-stopped

  blue:
    image: nginx:alpine
    ports:
      - "8081:80"
    volumes:
      - ./blue-content:/usr/share/nginx/html:ro
    restart: unless-stopped

  green:
    image: nginx:alpine  
    ports:
      - "8082:80"
    volumes:
      - ./green-content:/usr/share/nginx/html:ro
    restart: unless-stopped

networks:
  default:
    name: zero-downtime-network

